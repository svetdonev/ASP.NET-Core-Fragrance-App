@model FragranceCreateRequest

@{
    ViewData["Title"] = "Add Fragrance";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-3 col-lg-8 col-xl-6">
            <h2 class="heading-margin my-colorText text-center">Add a Fragrance</h2>
            <form method="post">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info" style="max-width: 150px"/>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Type fragrance's name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Description"></label>
                    <textarea rows="4" asp-for="Description" class="form-control" placeholder="Add some description for the fragrance..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Type"></label>
                    <input asp-for="Type" class="form-control">
                    <span asp-validation-for="Type" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="NoteIds">Choose notes:</label>
                    <select asp-for="NoteIds" multiple class="form-control">
                        @foreach(var note in Model.Notes)
                        {
                            <option value="@note.Id">@note.Name</option>
                        }
                    </select>
                    <span asp-validation-for="NoteIds" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach(var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <input class="btn btn-primary" type="submit" value="Add"/>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var imageUrlInput = $('#ImageUrl');

            output.src = imageUrlInput.val();

            imageUrlInput.on("input", function () {
                output.src = $(this).val();
            });
        });
    </script>
}